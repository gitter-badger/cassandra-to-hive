export HCAT_HOME=/usr/lib/hive-hcatalog
export HIVE_HOME=/usr/lib/hive
export HIVE_CONF_DIR=/etc/hive/conf
export HADOOP_LIB_DIR=/usr/lib/hadoop/lib
export HADOOP_CONF_DIR=/etc/hadoop/conf
export HADOOP_HOME=/usr/lib/hadoop

HCATJAR=$HCAT_HOME/share/hcatalog/hive-hcatalog-core.jar
HCATPIGJAR=$HCAT_HOME/share/hcatalog/hive-hcatalog-pig-adapter.jar
HIVE_VERSION=0.13.1-cdh5.3.0
LIBJARS=`echo $HADOOP_CLASSPATH | sed -e 's/:/,/g'`

export HADOOP_CLASSPATH=$HCATJAR:$HCATPIGJAR:$HIVE_HOME/lib/hive-exec-$HIVE_VERSION.jar\
:$HIVE_HOME/lib/hive-metastore-$HIVE_VERSION.jar:$HIVE_HOME/lib/jdo-api-3.0.1.jar:$HIVE_HOME/lib/libfb303-0.9.0.jar\
:$HIVE_HOME/lib/libthrift-0.9.0-cdh5-2.jar:$HADOOP_LIB_DIR/slf4j-api-1.7.5.jar:$HIVE_CONF_DIR:$HADOOP_CONF_DIR:$HIVE_HOME/lib/antlr-runtime-3.4.jar:$HIVE_HOME/lib/datanucleus-api-jdo-3.2.6.jar:$HIVE_HOME/lib/datanucleus-core-3.2.10.jar:$HIVE_HOME/lib/datanucleus-rdbms-3.2.9.jar:/usr/share/java/mysql-connector-java.jar
LIBJARS=`echo $HADOOP_CLASSPATH | sed -e 's/:/,/g'`
export LIBJARS=$HIVE_HOME/lib/antlr-runtime-3.4.jar,$LIBJARS

hadoop jar build/libs/cassandra-to-hive-0.1.2.jar com.kenshoo.bigdata.cassandra_to_hive.Main -files $HCATJAR -libjars $LIBJARS $@
